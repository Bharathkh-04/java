import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int a=Math.abs(sc.nextInt());
        int sum=0;
        while(a!=0)
        {
            sum+=a%10;
            a=a/10;
        }System.out.println(sum);
    }
}
