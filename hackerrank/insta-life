import java.io.*;
import java.util.*;
import java.util.Scanner;
public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        String name=sc.next();
        int followers=sc.nextInt();
        int post=sc.nextInt();
        float hours=sc.nextFloat();
        System.out.println("My name is "+name+", my Instagram has "+followers+" followers, I have posted "+post+" posts, and I use Instagram for "+hours+" hours daily.");
}
}
